<div class="row text-center">
  <div class="col-md-12">
    <div class="page-header">
      <h2>Tienda</h2>
    </div>
  </div>
</div>

<div id="products" class="row">
    <% Product.where(is_active: true).order(:sell_price).all.each do |product| %>
      <%= form_tag add_to_cart_orders_path do %>
        <%= hidden_field_tag :sku, product.sku %>
        <div class="product col-sm-6 col-md-4">
            <div class="thumbnail">
              <%= image_tag product.photo_1.single.url %>
              <div class="caption">
                <h3 class="brown"><%= product.name %></h3>
                <p><%= product.description %></p>
                <h3 class="brown"><%= number_to_currency product.sell_price, precision: 0, delimiter: '.' %></h3>
                <%= link_to 'Ver producto', product_path(product.slug), class: 'btn btn-primary' %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
  </div>

<script>
$.getScript('//cdn.jsdelivr.net/isotope/1.5.25/jquery.isotope.min.js',function(){

   $('#products').imagesLoaded( function(){
    $('#products').isotope({
      itemSelector : '.product'
    });
  });
  
});


</script>

