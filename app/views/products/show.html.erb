<% provide :title, @product.name %>

<div class="row" >

  <div class="col-md-6 text-center">
    <%= image_tag @product.photo_1.single.url, class: 'img-rounded' %>
  </div>

  <div class="col-md-6">
    <h3 style="margin-bottom: 30px;"><%= @product.name %></h3>
    <p><%= @product.description %></p>
    <h3 class="brown"><%= number_to_currency @product.sell_price, precision: 0, delimiter: '.' %></h4>

    <%= form_tag add_to_cart_orders_path do %>
    <%= hidden_field_tag :sku, @product.sku %>
    <%= submit_tag 'Agregar al carro', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div><!-- row -->


