<% provide :title, 'Inicia sesión' %>

<div class="page-header text-center">
  <%= render 'shared/flash_messages' %>
  <h2>Inicia sesión</h2>
</div>

<div class="row text-center">
  <div class="col-md-4 col-md-offset-4">
    <%= bootstrap_form_for :session, url: sessions_path do |f| %>
      <%= f.text_field :email, hide_label: true, placeholder: 'Email', class: 'input-lg', required: true %>
      <%= f.password_field :password, hide_label: true, placeholder: 'Contraseña', class: 'input-lg', required: true %>
      <%= f.submit 'Iniciar sesión', class: 'btn btn-primary btn-lg center-block col-md-12', data: { disable_with: 'Cargando...' } %>
    <% end %>
    <p>¿No estás registrado? <%= link_to '¡Regístrate ahora!', signup_path %></p>
    <p><%= link_to '¿Olvidaste tu contraseña?', new_password_reset_path %></p>
    
  </div>
</div>



